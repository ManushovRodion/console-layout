{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es5",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "type",
    "importHelpers": true,
    "resolveJsonModule": true,
    "paths": {
      "@cli": ["./src/cli"],
      "@core": ["./src/core"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "scripts"]
}
